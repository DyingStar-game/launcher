# Environment Configuration for Dying Star Launcher

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Dying Star Launcher
NEXT_PUBLIC_APP_VERSION=0.0.1

# Electron Configuration
ELECTRON_DISABLE_SECURITY_WARNINGS=true
ELECTRON_ENABLE_LOGGING=true

# Development URLs
NEXT_DEV_URL=http://localhost:3000
ELECTRON_DEV_PORT=3000

# ===========================================
# BUILD SETTINGS
# ===========================================
# Set to 'production' when building for release
# NODE_ENV=production

# Disable security warnings in production (not recommended)
# ELECTRON_DISABLE_SECURITY_WARNINGS=false

# ===========================================
# DEBUG SETTINGS
# ===========================================
# Enable detailed Electron debugging
DEBUG_ELECTRON=false

# Enable nodemon verbose mode
NODEMON_VERBOSE=false

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
# Custom window dimensions
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# Enable/disable DevTools in development
ENABLE_DEVTOOLS=true