{
  "name": "dying-star",
  "version": "0.0.1",
  "description": "Game launcher for Dying Star",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "electron-dev": "concurrently --names \"üåê Next.js,‚ö° Electron\" --prefix-colors \"cyan.bold,magenta.bold\" --kill-others --restart-tries 3 \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development nodemon\"",
    "clean": "rimraf dist out .next",
    "build": "next build && next export",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DyingStar-game/launcher.git"
  },
  "keywords": ["game", "launcher", "electron", "nextjs", "dying-star"],
  "author": "DyingStar Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DyingStar-game/launcher/issues"
  },
  "homepage": "https://github.com/DyingStar-game/launcher#readme",
  "build": {
    "appId": "com.dyingstar.launcher",
    "productName": "Dying Star Launcher",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "assets/icons/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png",
      "category": "Game"
    }
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "wait-on": "^8.0.4"
  }
}